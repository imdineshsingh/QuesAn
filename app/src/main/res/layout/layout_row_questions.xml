<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtQuestionid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:text="Here goes Title"
        android:textSize="18sp"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/txtQuestionTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:text="Here goes Question Title"
        android:textSize="18sp"
        />
    <TextView
        android:id="@+id/txtQuestionDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="here goes Description"
        android:textSize="18sp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Posted On"
            android:textSize="15sp"
            android:id="@+id/txtPostedDate"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Posted by"
            android:textSize="15sp"
            android:id="@+id/txtPostedBy"
            android:layout_weight="1"
            />
    </LinearLayout>

</LinearLayout>